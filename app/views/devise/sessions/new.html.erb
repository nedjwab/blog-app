<h2 class="title">Log in</h2>

<%= form_for(resource,data: { turbo: false }, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email ,:class => 'submit-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:class => 'submit-field' %>
  </div>

  <div class="field">
    <%= f.label :password ,:class => 'submit-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password" ,:class => 'submit-field' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in",:class => 'submit-button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
