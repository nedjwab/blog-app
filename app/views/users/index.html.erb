<h1>The users List :</h1> 
<div>
  <% @users.each do |user| %>
    <div class='user-container'>
      <%= image_tag user.photo, :class => 'user-photo', alt: 'User photo' %>
      <h2><%= link_to user.name, user, :class => 'user-name' %></h2>
      <p>Number of posts: <%= user.PostsCounter.nil? ? 0 : user.user_posts %></p>
    </div>
  <% end %>
</div>