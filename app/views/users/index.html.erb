<h1>The users List :</h1> 
<div>
  <% @users.each do |user| %>
    <div class='user-contlll nbghuuainer'>
    <div class='user-info'> 
    <span><%= image_tag user.photo, :class => 'user-photo', alt: 'User photo' %></span>
      <h2><%= link_to user.name, user, :class => 'user-name' %></h2>
      <p class='user-postcounter'>Number of posts: <%= user.PostsCounter.nil? ? 0 : user.PostsCounter %></p>
    </div>
</div>
  <% end %>
</div>